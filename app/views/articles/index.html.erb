
<div id="content-wrapper" class="mui--text-center">
  <div class="mui--appbar-height"></div>
<br>

<p id="notice"><%= notice %></p>

<br>
<div class="mui--text-display3">Plato</div>
<br>
<br>


<table class="mui-table mui-table--bordered">
  <h1>Articles</h1>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mui-container-fluid">
  <div class="mui-row" id="recent_article">
    <div class="mui-col-md-1"></div>
    <strong><div class="mui-col-md-2" id="title"></div> 
    <div class="mui-col-md-2"></div>
    <div class="mui-col-md-2" id="body"> </div></strong>


    </div>
    </div>
<br>

<%= link_to 'New Article', new_article_path, remote: true, class: 'mui-btn mui-btn--raised' %>



</div>



